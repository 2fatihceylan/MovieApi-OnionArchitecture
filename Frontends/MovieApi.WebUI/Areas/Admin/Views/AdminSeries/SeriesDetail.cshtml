@using MovieApi.Dto.Dtos.AdminSeriesDto
@model AdminResultSeriesDto



@{
    ViewData["Title"] = "Series Details";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    :root {
        --primary: #4f46e5;
        --success: #16a34a;
        --danger: #dc2626;
        --surface: #ffffff;
        --muted: #64748b;
        --text: #0f172a;
        --border: #e2e8f0;
        --radius: 16px;
    }

    body {
        background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
        font-family: 'Inter', sans-serif;
    }

    .admin-card {
        background: var(--surface);
        border-radius: var(--radius);
        padding: 40px;
        max-width: 980px;
        margin: 50px auto;
        box-shadow: 0 20px 40px rgba(0,0,0,.08), 0 8px 16px rgba(0,0,0,.06);
        border: 1px solid var(--border);
    }

    .admin-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text);
        margin-bottom: 32px;
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 36px;
    }

    .poster {
        width: 100%;
        border-radius: 18px;
        aspect-ratio: 2 / 3;
        object-fit: cover;
        box-shadow: 0 18px 40px rgba(0,0,0,.25);
        transition: transform .35s ease, box-shadow .35s ease;
    }

    .poster:hover {
        transform: scale(1.04);
        box-shadow: 0 28px 60px rgba(0,0,0,.35);
    }

    .info-group {
        padding-bottom: 14px;
        margin-bottom: 14px;
        border-bottom: 1px dashed var(--border);
    }

    .info-label {
        font-size: 12px;
        font-weight: 700;
        letter-spacing: .08em;
        color: var(--muted);
        text-transform: uppercase;
        margin-bottom: 6px;
    }

    .info-value {
        font-size: 17px;
        font-weight: 600;
        color: var(--text);
    }

    .badge {
        padding: 6px 14px;
        font-size: 13px;
        border-radius: 999px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
    }

    .badge-active {
        background: rgba(22, 163, 74, .12);
        color: var(--success);
        border: 1px solid rgba(22, 163, 74, .35);
    }

    .badge-passive {
        background: rgba(220, 38, 38, .12);
        color: var(--danger);
        border: 1px solid rgba(220, 38, 38, .35);
    }

    .description-box {
        background: linear-gradient(145deg, #f8fafc, #eef2ff);
        border-radius: var(--radius);
        padding: 22px;
        border: 1px solid var(--border);
        font-size: 15px;
        line-height: 1.7;
        color: var(--text);
    }

    .btn-area {
        display: flex;
        justify-content: flex-end;
        gap: 14px;
        margin-top: 36px;
    }

    .btn-primary-soft {
        background: linear-gradient(135deg, #6366f1, #4338ca);
        color: #fff;
        padding: 14px 26px;
        border-radius: 999px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 12px 30px rgba(79,70,229,.45);
        transition: all .3s ease;
    }

    .btn-primary-soft:hover {
        transform: translateY(-2px);
        box-shadow: 0 18px 36px rgba(79,70,229,.6);
    }

    .btn-secondary {
        background: #f1f5f9;
        color: var(--text);
        padding: 14px 26px;
        border-radius: 999px;
        font-weight: 700;
        text-decoration: none;
        border: 1px solid var(--border);
        transition: all .3s ease;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        transform: translateY(-2px);
    }
</style>

<div class="admin-card">
    <div class="admin-title">
        <ion-icon name="tv-outline"></ion-icon>
        Series Details
    </div>

    <div class="details-grid">
        <!-- Poster -->
        <div>
            <img src="@Model.CoverImageUrl" alt="@Model.Title" class="poster" />
        </div>

        <!-- Info -->
        <div>
            <div class="info-group">
                <div class="info-label">Title</div>
                <div class="info-value">@Model.Title</div>
            </div>

            <div class="info-group">
                <div class="info-label">Category</div>
                <div class="info-value">@Model.CategoryName</div>
            </div>

            <div class="info-group">
                <div class="info-label">Rating</div>
                <div class="info-value">@Model.Rating / 10</div>
            </div>

            <div class="info-group">
                <div class="info-label">First Air Date</div>
                <div class="info-value">@Model.FirstAirDate.ToString("dd MMM yyyy")</div>
            </div>

            <div class="info-group">
                <div class="info-label">Average Episode Duration</div>
                <div class="info-value">@Model.AverageEpisodeDuration dk</div>
            </div>

            <div class="info-group">
                <div class="info-label">Seasons / Episodes</div>
                <div class="info-value">@Model.SeasonCount Seasons • @Model.EpisodeCount Episodes</div>
            </div>

            <div class="info-group">
                <div class="info-label">Status</div>
                <div class="info-value">
                    @if (Model.Status == "true")
                    {
                        <span class="badge badge-active">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-passive">Passive</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="info-group" style="margin-top:30px;">
        <div class="info-label">Description</div>
        <div class="description-box">
            @Model.Description
        </div>
    </div>

    <div class="btn-area">
        <a asp-action="UpdateSeries" asp-route-id="@Model.SeriesId" class="btn-primary-soft">
            <ion-icon name="create-outline"></ion-icon>
            Edit Series
        </a>

        <a asp-action="SeriesList" class="btn-secondary">
            Back to List
        </a>
    </div>
</div>
