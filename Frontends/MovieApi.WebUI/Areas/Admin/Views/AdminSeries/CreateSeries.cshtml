@using MovieApi.Dto.Dtos.AdminSeriesDto
@model AdminCreateSeriesDto

@{
    ViewData["Title"] = "Series Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    :root {
        --primary: #6366f1;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --bg-soft: #f3f4f6;
        --text-dark: #1f2937;
        --text-muted: #6b7280;
        --radius: 12px;
    }

    body {
        background: var(--bg-soft);
        font-family: 'Inter', sans-serif;
    }

    *, *::before, *::after {
        box-sizing: border-box;
    }

    ion-icon {
        font-size: 22px;
    }

    .admin-card {
        background: #ffffff;
        border-radius: var(--radius);
        padding: 34px;
        box-shadow: 0 10px 28px rgba(0,0,0,.15);
        max-width: 800px;
        margin: 40px auto;
        border: 1px solid #e5e7eb;
    }

    .admin-title {
        font-size: 1.9rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 26px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 22px;
    }

    .form-group {
        margin-bottom: 22px;
    }

    .form-group label {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 6px;
        display: block;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: 14px;
        border-radius: var(--radius);
        border: 1px solid #c7c9fc;
        background: #fff;
        font-size: 15px;
        transition: 0.2s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.20);
        outline: none;
    }

    textarea {
        min-height: 130px;
        resize: vertical;
    }

    .btn-area {
        display: flex;
        gap: 12px;
        margin-top: 18px;
    }

    .btn-primary-soft {
        background: var(--primary);
        color: #fff;
        padding: 13px 22px;
        border-radius: var(--radius);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        transition: 0.2s;
    }

    .btn-primary-soft:hover {
        background: #5850ec;
    }

    .btn-secondary {
        background: #6b7280;
        color: #fff;
        padding: 13px 22px;
        border-radius: var(--radius);
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: 0.2s;
    }

    .btn-secondary:hover {
        background: #4b5563;
    }
</style>

<div class="admin-card">
    <div class="admin-title">
        <ion-icon name="tv-outline"></ion-icon>
        Add New Series
    </div>

    <form asp-action="CreateSeries" method="post">

        <div class="form-group">
            <label>Series Title</label>
            <input asp-for="Title" placeholder="Enter series title..." />
        </div>

        <div class="grid-2">
            <div class="form-group">
                <label>Cover Image URL</label>
                <input asp-for="CoverImageUrl" placeholder="https://example.com/series.jpg" />
            </div>

            <div class="form-group">
                <label>Rating (0 - 10)</label>
                <input asp-for="Rating" type="number" step="0.1" placeholder="8.7" />
            </div>

            <div class="form-group">
                <label>Category</label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
            </div>
        </div>

        <div class="grid-2">
            <div class="form-group">
                <label>Average Episode Duration (min)</label>
                <input asp-for="AverageEpisodeDuration" type="number" placeholder="45" />
            </div>

            <div class="form-group">
                <label>First Air Date</label>
                <input asp-for="FirstAirDate" type="date" />
            </div>
        </div>

        <div class="grid-2">
            <div class="form-group">
                <label>Season Count</label>
                <input asp-for="SeasonCount" type="number" placeholder="3" />
            </div>

            <div class="form-group">
                <label>Episode Count</label>
                <input asp-for="EpisodeCount" type="number" placeholder="24" />
            </div>
        </div>

        <div class="grid-2">
            <div class="form-group">
                <label>Created Year</label>
                <input asp-for="CreatedYear" placeholder="2024" />
            </div>

            <div class="form-group">
                <label>Status</label>
                <select asp-for="Status">
                    <option value="Active">Active</option>
                    <option value="Passive">Passive</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" placeholder="Write series description..."></textarea>
        </div>

        <div class="btn-area">
            <button type="submit" class="btn-primary-soft">
                <ion-icon name="save-outline"></ion-icon>
                Save Series
            </button>

            <a asp-action="SeriesList" class="btn-secondary">
                Cancel
            </a>
        </div>

    </form>
</div>
